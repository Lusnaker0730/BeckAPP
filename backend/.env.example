# FHIR Analytics Backend - Environment Variables
# Copy this file to .env and update with your actual values

# ============================================================================
# CRITICAL SECURITY SETTINGS - MUST CHANGE IN PRODUCTION
# ============================================================================

# JWT Secret - REQUIRED for authentication
# Generate with: openssl rand -hex 32
# NEVER use the default value in production!
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Environment: development, staging, production
# In production, JWT_SECRET validation is STRICT
ENVIRONMENT=development

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://fhir_user:CHANGE_PASSWORD@localhost:5432/fhir_analytics

# ============================================================================
# FHIR Server Configuration
# ============================================================================

FHIR_SERVER_URL=https://hapi.fhir.org/baseR4

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_URL=redis://localhost:6379/0

# ============================================================================
# CORS Configuration
# ============================================================================

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# Security Settings
# ============================================================================

ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# ============================================================================
# Production Checklist
# ============================================================================
# ✅ JWT_SECRET is set to a strong 64-character random string
# ✅ DATABASE_URL uses a strong password (16+ characters)
# ✅ ENVIRONMENT is set to production
# ✅ ALLOWED_ORIGINS only includes your actual domain(s)
# ✅ All default passwords have been changed
# ✅ HTTPS/TLS is enabled
#
# Generate JWT Secret: openssl rand -hex 32
# Generate DB Password: openssl rand -base64 32
# ============================================================================
